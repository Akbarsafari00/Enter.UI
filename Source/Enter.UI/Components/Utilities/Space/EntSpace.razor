@namespace Enter.UI.Components
<div  @attributes="AdditionalAttributes" class="@RootCss" >@ChildContent</div>
@inherits EntComponentBase
@code {
    private readonly string _flexRow = "flex-row";
    public string _flexColumn = "flex-column";

    public string RootCss => CssClassBuilder
        .AddClass($"space-x-{SpaceX}")
        .AddClass($"mobile:space-x-{MobileSpaceX}", MobileSpaceX.HasValue)
        .AddClass($"tablet:space-x-{TabletSpaceX}", TabletSpaceX.HasValue)
        .AddClass($"laptop:space-x-{LaptopSpaceX}", LaptopSpaceX.HasValue)
        .AddClass($"desktop:space-x-{DesktopSpaceX}", DesktopSpaceX.HasValue)
        .AddClass($"screen:space-x-{ScreenSpaceX}", ScreenSpaceX.HasValue)

        .AddClass($"space-y-{SpaceY}")
        .AddClass($"mobile:space-y-{MobileSpaceY}", MobileSpaceY.HasValue)
        .AddClass($"tablet:space-y-{TabletSpaceY}", TabletSpaceY.HasValue)
        .AddClass($"laptop:space-y-{LaptopSpaceY}", LaptopSpaceY.HasValue)
        .AddClass($"desktop:space-y-{DesktopSpaceY}", DesktopSpaceY.HasValue)
        .AddClass($"screen:space-y-{ScreenSpaceY}", ScreenSpaceY.HasValue)

         .AddClass($"space-reverse-x", IsSpaceXReverse)
        .AddClass($"mobile:space-x-reverse", IsMobileSpaceXReverse.HasValue && IsMobileSpaceXReverse.Value)
        .AddClass($"tablet:space-x-reverse", IsTabletSpaceXReverse.HasValue && IsTabletSpaceXReverse.Value)
        .AddClass($"laptop:space-x-reverse", IsLaptopSpaceXReverse.HasValue && IsLaptopSpaceXReverse.Value)
        .AddClass($"desktop:space-x-reverse", IsDesktopSpaceXReverse.HasValue && IsDesktopSpaceXReverse.Value)
        .AddClass($"screen:space-x-reverse", IsScreenSpaceXReverse.HasValue && IsScreenSpaceXReverse.Value)

        .AddClass($"space-reverse-y",IsSpaceYReverse)
        .AddClass($"mobile:space-y-reverse", IsMobileSpaceYReverse.HasValue && IsMobileSpaceYReverse.Value)
        .AddClass($"tablet:space-y-reverse", IsTabletSpaceYReverse.HasValue && IsTabletSpaceYReverse.Value)
        .AddClass($"laptop:space-y-reverse", IsLaptopSpaceYReverse.HasValue && IsLaptopSpaceYReverse.Value)
        .AddClass($"desktop:space-y-reverse", IsDesktopSpaceYReverse.HasValue && IsDesktopSpaceYReverse.Value)
        .AddClass($"screen:space-y-reverse", IsScreenSpaceYReverse.HasValue && IsScreenSpaceYReverse.Value)

        .Build();

    [Parameter]
    public RenderFragment? ChildContent{ get; set; }
    [Parameter]
    public decimal SpaceX { get; set; } = 4;

    [Parameter]
    public decimal? MobileSpaceX { get; set; }

    [Parameter]
    public decimal? TabletSpaceX { get; set; }

    [Parameter]
    public decimal? LaptopSpaceX { get; set; }

    [Parameter]
    public decimal? DesktopSpaceX { get; set; }

    [Parameter]
    public decimal? ScreenSpaceX { get; set; }

    [Parameter]
    public decimal SpaceY { get; set; } = 4;

    [Parameter]
    public decimal? MobileSpaceY { get; set; }

    [Parameter]
    public decimal? TabletSpaceY { get; set; }

    [Parameter]
    public decimal? LaptopSpaceY { get; set; }

    [Parameter]
    public decimal? DesktopSpaceY { get; set; }

    [Parameter]
    public decimal? ScreenSpaceY { get; set; }


    [Parameter]
    public bool IsSpaceYReverse { get; set; } = false;

    [Parameter]
    public bool? IsMobileSpaceYReverse { get; set; }

    [Parameter]
    public bool? IsTabletSpaceYReverse { get; set; }

    [Parameter]
    public bool? IsLaptopSpaceYReverse { get; set; }

    [Parameter]
    public bool? IsDesktopSpaceYReverse { get; set; }

    [Parameter]
    public bool? IsScreenSpaceYReverse { get; set; }


    [Parameter]
    public bool IsSpaceXReverse { get; set; } = false;

    [Parameter]
    public bool? IsMobileSpaceXReverse { get; set; }

    [Parameter]
    public bool? IsTabletSpaceXReverse { get; set; }

    [Parameter]
    public bool? IsLaptopSpaceXReverse { get; set; }

    [Parameter]
    public bool? IsDesktopSpaceXReverse { get; set; }

    [Parameter]
    public bool? IsScreenSpaceXReverse { get; set; }


    public override void Dispose()
    {
        
    }

}