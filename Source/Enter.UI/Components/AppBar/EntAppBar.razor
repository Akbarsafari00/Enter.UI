@using Enter.UI.Abstractions.Components.Icon
@inherits EntComponentBase
@namespace Enter.UI.Components
<div @attributes="@AdditionalAttributes" class="@cssClass">
    @if (ShowToggle)
    {
        <EntIcon Click="ToggleClick" class="ent-app-bar-toggle cursor-pointer" Type="EntIconType.IconTag" Icon="EntIconName.Bars"/>
    }
    <b class="ent-app-bar-title">@Title</b>
    <div class="ent-app-bar-content">@ChildContent</div>
</div>

@code {
    
    protected string cssClass => CssClassBuilder
        .AddClass("ent-appbar")
        .Build();

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public EventCallback ToggleClick { get; set; }

    [Parameter]
    public bool ShowToggle { get; set; } = false;
    
    [Parameter]
    public string Title { get; set; }

    public override void Dispose()
    {
        
    }

} 