@inherits EntTabBase
@namespace Enter.Ui.Components
<EntTab @ref="_tab"
        @attributes="@AdditionalAttributes"
        class="@RootCss"
        ItemClass="@ItemClass"
        ResponsiveMode="@ResponsiveMode"
        Direction="@Direction"
        ItemDirection="@ItemDirection"
        Expandable="@Expandable"
        Closeable="@Closeable"
        IconMinify="@IconMinify"
        ActiveClass="@ActiveClass"
        PanelClass="@PanelClass"
        TabNoContentMessage="@TabNoContentMessage"
        KeepPanelAlive="@KeepPanelAlive"
        OnTabActivated="OnTabActivatedCallbackAsync"
        OnTabRemoved="OnTabRemovedCallback"
        OnTabClosedClick="OnTabClosedCallback"
        OnAllTabClosedClick="OnAllTabClosedCallback"
        OnTabAdded="OnTabAddedCallback">
    <ChildContent>
        @foreach (var item in _items)
        {
            <CascadingValue Value="@item" @key="item.Id">
                <EntTabPanel Icon="@item.Icon" Title="@item.Title" Id="@item.Id">
                    <DynamicComponent Type="@item.ComponentType" Parameters="@item.ComponentParameters"/>
                </EntTabPanel>
            </CascadingValue>
        }
    </ChildContent>
    <DefaultPanel>
        @ChildContent
    </DefaultPanel>
</EntTab>