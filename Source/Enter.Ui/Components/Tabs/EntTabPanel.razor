@inherits Enter.Ui.Bases.EntComponentBase
@namespace Enter.Ui.Components

<div @attributes="@AdditionalAttributes" class="@ClassNames">
    @if (Parent.KeepPanelAlive)
    {
        @ChildContent
    }
    else
    {
        @if (Parent.IsActiveTab(Id))
        {
            @ChildContent
        }
    }
</div>