@inherits EntBaseComponent
@namespace Enter.UI.Components

@if (Icon is not null)
{
    @if (Icon.StartsWith("<"))
    {
        <svg  @onclick="@Click" viewBox="@ViewBox" class="@RootCss">
            @((MarkupString)Icon)
        </svg>
    }
    else
    {
        <i  @onclick="@Click" class="@RootCss @Icon"></i>
        
    }
}
    

