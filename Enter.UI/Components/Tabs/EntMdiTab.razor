@inherits EntTabBase
@namespace Enter.UI.Components
<EntTab @ref="Tab"
        @attributes="@AdditionalAttributes"
        class="@RootCss"
        ItemClass="@ItemClass"
        Direction="@Direction"
        ItemDirection="@ItemDirection"
        Expandable="@Expandable"
        Closeable="@Closeable"
        ActiveClass="@ActiveClass"
        PanelClass="@PanelClass"
        KeepPanelAlive="@KeepPanelAlive"
        OnTabActived="OnTabActivatedCallback"
        OnTabClosed="OnTabClosedCallback"
        OnAllTabClosed="OnAllTabClosedCallback"
        OnTabAdded="OnTabAddedCallback">
    <ChildContent>
        @foreach (var item in Items)
        {
            <CascadingValue Value="@item">
                <EntTabPanel Icon="@item.Icon" Title="@item.Title" Id="@item.Id" @key="item.Key">
                    <DynamicComponent Type="@item.ComponentType" Parameters="@item.ComponentParameters"/>
                </EntTabPanel>
            </CascadingValue>
        }
    </ChildContent>
    <DefaultPanel>
        @ChildContent
    </DefaultPanel>
</EntTab>