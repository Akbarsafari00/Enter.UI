@inherits EntTabBase

<EntTab @ref="Tab"
        Style="@Style"
        UserAttributes="UserAttributes"
        ItemClass="@ItemClass"
        Direction="@Direction"
        ItemDirection="@ItemDirection"
        Expandable="@Expandable"
        Closeable="@Closeable"
        Class="@cssClass"
        ActiveClass="@ActiveClass"
        PanelClass="@PanelClass"
        KeepPanelAlive="@KeepPanelAlive"
        OnTabActived="OnTabActivatedCallback"
        OnTabClosed="OnTabClosedCallback"
        OnTabAdded="OnTabAddedCallback">
    @foreach (var item in Items)
    {
        <EntTabPanel  Icon="@item.Icon" Title="@item.Title" TabId="@item.TabId" @key="item.Key">
            <DynamicComponent Type="@item.ComponentType" Parameters="@item.ComponentParameters" />
        </EntTabPanel>
    }
</EntTab>