@inherits EntTabBase
@namespace Enter.UI.Components
<EntTab @ref="_tab"
        @attributes="@AdditionalAttributes"
        class="@RootCss"
        ItemClass="@ItemClass"
        Direction="@Direction"
        ItemDirection="@ItemDirection"
        Expandable="@Expandable"
        Closeable="@Closeable"
        ActiveClass="@ActiveClass"
        PanelClass="@PanelClass"
        TabNoContentMessage="@TabNoContentMessage"
        KeepPanelAlive="@KeepPanelAlive"
        OnTabActivated="OnTabActivatedCallback"
        OnTabRemoveClick="OnTabClosedCallback"
        OnAllTabRemoveClick="OnAllTabClosedCallback"
        OnTabAdded="OnTabAddedCallback">
    <ChildContent>
        @foreach (var item in _items)
        {
            <CascadingValue Value="@item">
                <EntTabPanel Icon="@item.Icon" Title="@item.Title" Id="@item.Id" @key="item.Id">
                    <DynamicComponent Type="@item.ComponentType" Parameters="@item.ComponentParameters"/>
                </EntTabPanel>
            </CascadingValue>
        }
    </ChildContent>
    <DefaultPanel>
        @ChildContent
    </DefaultPanel>
</EntTab>